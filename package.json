{
  "name": "validated-base",
  "description": "Abstract validated base class",
  "version": "1.0.2",
  "author": "Eric Hacke",
  "bugs": {
    "url": "https://github.com/ehacke/validated-base/issues"
  },
  "dependencies": {
    "clean-deep": "^3.4.0",
    "err": "^2.1.12",
    "http-status": "^1.5.0",
    "lodash": "^4.17.20"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@ehacke/commitlint-config": "^2.0.0",
    "@ehacke/eslint-config": "^2.0.2",
    "@ehacke/eslint-config-ts": "^1.2.0",
    "@ehacke/prettier-config": "^1.0.3",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.2.0",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "chai": "^4.2.0",
    "class-validator": "^0.12.2",
    "commitizen": "^4.2.2",
    "commitlint": "^11.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.16.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-json": "^2.1.2",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "fixpack": "^3.0.6",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "prettier-eslint-cli": "^5.0.0",
    "sinon": "^9.2.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "files": [
    "dist/**/*.{js,ts,tsbuildinfo}"
  ],
  "homepage": "https://github.com/ehacke/validated-base#readme",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "keywords": [
    "abstract",
    "base",
    "class",
    "class-validator",
    "model",
    "validate",
    "validation"
  ],
  "license": "MIT",
  "lint-staged": {
    "package.json": [
      "fixpack"
    ],
    "*.{js,ts}": [
      "prettier-eslint --write",
      "eslint --fix"
    ]
  },
  "main": "dist/index.js",
  "peerDependencies": {
    "class-validator": "^0.12.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ehacke/validated-base.git"
  },
  "scripts": {
    "beta": "npm version prerelease && npm publish",
    "build": "rm -rf ./dist && tsc -p tsconfig.build.json",
    "commit": "git-cz",
    "lint": "fixpack && prettier-eslint --write && eslint --fix \"**/*.{js,ts}\"",
    "major": "npm version major && npm publish",
    "minor": "npm version minor && npm publish",
    "patch": "npm version patch && npm publish",
    "postpublish": "git push",
    "prepare": "fixpack",
    "prepublishOnly": "npm run build",
    "test": "nyc mocha --recursive -r source-map-support/register -r ts-node/register --use_strict --exit \"tests/**/*.+(unit|it).+(ts|js)\" && npm run lint"
  },
  "types": "dist/index.d.ts"
}
